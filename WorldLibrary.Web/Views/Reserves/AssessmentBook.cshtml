@model WorldLibrary.Web.Models.AssessmentViewModel
@{
    ViewData["Title"] = "AssessmentBook";
}

<h1>AssessmentBook</h1>

<h4>Assessment</h4>
<flash dismissable="true" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssessmentBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAssessment" />
            <input type="hidden" asp-for="Reserve.Id" />
            <div class="form-group">
                <label asp-for="Reserve" class="control-label"></label>
                <p>@ViewBag.Book </p>
            </div>
            <div class="form-group">
                <label asp-for="AssessmentId" class="control-label"></label>
                <select asp-for="AssessmentId" asp-items="Model.Assessments" class="form-control"></select>
                <span asp-validation-for="AssessmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>Save</button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>

